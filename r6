#include <iostream>
#include <string>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int a = 0;
	string b = " ";
	cout << "輸入0~3" <<endl;
	cin >> a ; 
	
	switch (a) {
		case 0: 
		b = "春天";
		break;
		
		case 1 :
		b = "夏天";
		break ;
		
		case 2 :
		b = "秋天";
		break;
		
		case 3 :
		b = "冬天"; 
		break;
		
		default: 
		b = "無效";
				}
		cout << b << endl;
}




