	int year = 1 ;
	while (year != 0){
		
		cout << "請輸入一個西元年,按0離開" << endl;
		cin >> year ;
		if (year != 0){
			
			bool answer = false ;
			if (year % 4 ==0 && year % 100 != 0 || year % 400 == 0 ){
				answer = true ;
				}
				if (answer){
					cout << "閏年" <<endl; 
				}else { cout <<"平年" <<endl; }
			}else{cout << "掰掰" <<endl;
			}
	}

	
	
	return 0;
}
